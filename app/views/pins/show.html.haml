#pin_show.row.justify-content-center
    .col-6
        .card
            = image_tag @pin.image.url(:medium), class: "card-img-top"
            = tag.div class: "card-body" do
                = link_to like_pin_path(@pin), method: :put, id: "heart", class: "btn float-right", role: "button" do
                    %i.far.fa-heart 
                        =@pin.get_upvotes.size
                %h3.card-title= @pin.title
                %p.card-text= @pin.description
            .card-footer.text-muted
                .row
                    .col-6.align-self-center
                        Submited by
                        = @pin.user.email
                    .col-6.text-right
                        = link_to "Back", root_path, class: "btn btn-outline-primary btn-sm", role: "button"
                        = link_to "Edit", edit_pin_path, class: "btn btn-outline-primary btn-sm", role: "button"
                        = link_to "Delete", pin_path, method: :delete, data: { confirm: "Are you sure you want to delete this Pin?" }, class: "btn btn-danger btn-sm", role: "button"
