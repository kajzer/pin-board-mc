!!!5
%html
  %head
    %title Pin Board
    = csrf_meta_tags
    
    = stylesheet_link_tag    'application', 'https://use.fontawesome.com/releases/v5.0.6/css/all.css', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

    
  
  
  %body
    %nav.navbar.navbar-light.navbar-expand-md.navbar-light.bg-light
      .container
        %button.navbar-toggler.navbar-toggler-right{"type" => "button", "data-toggle" => "collapse", "data-target" => "#navbarSupportedContent", "aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation"} 
          #span.navbar-toggler-icon
        = link_to "Pin Board", root_path, class: "navbar-brand"
  
        
        -if user_signed_in?
          .collapse.navbar-collapse#navbarSupportedContent
            %ul.navbar-nav.ml-auto
              %li.nav-item= link_to "New Pin", new_pin_path, class: "nav-link"
              %li.nav-item= link_to "Account", edit_user_registration_path, class: "nav-link"
              %li.nav-item= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "nav-link"
        -else
          .collapse.navbar-collapse#navbarSupportedContent
            %ul.navbar-nav.ml-auto
              %li.nav-item= link_to "Sign Up", new_user_registration_path, class: "nav-link"
              %li.nav-item= link_to "Sign In", new_user_session_path, class: "nav-link"
    
    .container  
      - flash.each do |name, msg|
        = tag.div class: 'alert alert-info', role: 'alert' do
          = msg
      = yield

